{{#if products}}

<div class="row">
    <div class="col s12 m9 l8">
        <div class="cartBody">
            <p class="mycartText">My Cart ({{totalQty}})</p>
            {{#each products}}
            <div class="product">
                <div class="cardImageDiv">
                    <div class="cardImage">
                        <img height="150" width="150" src={{this.item.imagePath}} alt="">
                    </div>
                    <div class="cardAddReduce">
                        <h5>
                            <a href="/reduce/{{ this.item._id }}"><i class="fas fa-minus-circle"></i></a>
                            <span class="qty">{{this.qty}}</span>
                            <a href="/addByOne/{{ this.item._id }}"><i class="fas fa-plus-circle"></i></a>
                        </h5>
                    </div>
                </div>
                <div class="productDetails">
                    <h2 class="hide-on-small-only">{{this.title}}</h2>
                    <h5>{{this.title}}</h5>
                    <p> {{this.item.desc}} </p>
                    <h4> ₹ {{this.price}} </h4>
                </div>
            </div>
            <hr>
            {{/each}}
            <div class="placeorder">
                <a href="/checkout" class="btn btn-success">Place Order</a>
            </div>
        </div>
    </div>
    <div class="col s12 m3 l4">
        <div class="priceBody">
            <div class="priceDetailDiv">
                <div class="mycartText">Price Details</div>
                <div class="priceDetail">
                    <h6 class="left">Price ({{totalQty}} item)</h6>
                    <h6 class="right">{{totalPrice}}</h6> <br>
                </div>
                <br>
                <div class="paybleAmount">
                    <h6 class="left">Total Payable</h6>
                    <h6 class="right">{{totalPrice}}</h6>
                </div>
            </div>
            <br><br><br><br><br>
            <div class="branding">
                <div class="right">
                    <a href="/checkout" class="btn btn-success">Place Order</a>
                </div>
            </div>
        </div>
    </div>
</div>

{{else}}
<div class="row">
    <div class="col s12 m12 center">
        <h2>No Items in Cart</h2>
        <object height="200" type="image/svg+xml" data="/images/undraw_empty_cart_co35.svg">
            Your browser does not support SVG
        </object>
    </div>
</div>
{{/if}}

