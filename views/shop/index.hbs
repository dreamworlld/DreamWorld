<div class="row">
  <div class="col s6 col m4">
    <div id="success" class="alert alert-success {{#if noMessage}}d-none{{/if}}" role="alert">
      {{ successMsg }}
    </div>
  </div>
</div>

{{#if homePage}}
{{!-- Carousel --}}
<div class="owl-carousel owl-theme">
  {{#each response}}
  <div class="item">
    <div class="container">
      <div class="row valign-wrapper">
        <div class="col m4 l4 s4">
          <img src={{this.imagePath}} alt={{this.name}} class="responsive-img">
        </div>
        <div class="col l8 m8 s8">
          <div class="banner-heading">
            <h2 class="hide-on-small-only">{{this.name}}</h2>
            <h5 class="hide-on-med-and-up">{{this.name}}</h5>
          </div>
          <div class="banner text hide-on-small-only">
            <p>{{this.desc}}</p>
          </div>
          <button class="btn btn-large hide-on-small-only">
            <a style="text-decoration: none; color: white;" href="/buy-now-add-to-cart/{{this._id}}" target="_blank"
              rel="noopener noreferrer">Buy Now</a>
          </button>
          <button class="btn hide-on-med-and-up">
            <a style="text-decoration: none; color: white;" href="/buy-now-add-to-cart/{{this._id}}" target="_blank"
              rel="noopener noreferrer">Buy Now</a>
          </button>
          <button class="btn btn-large hide-on-small-only">
            <a style="text-decoration: none; color: white;" href="/products/{{this._id}}" target="_blank"
              rel="noopener noreferrer">View Product</a>
          </button>
          <button class="btn hide-on-med-and-up">
            <a style="text-decoration: none; color: white;" href="/products/{{this._id}}" target="_blank"
              rel="noopener noreferrer">View Product</a>
          </button>
        </div>
      </div>
    </div>
  </div>
  {{/each}}
</div>

{{/if}}
<div class="container">
  <div class="row">
    {{#each response}}
    <div class="col s12 m6 l3">
      <div class="card" id="productCard">
        <div class="card-image">
          <img src={{this.imagePath}} alt="card image" class="responsive-img center">
          <span class="card-title">
            <a href="/add-to-cart/{{this._id}}" class="right"><i class="fas fa-shopping-cart"></i></a><br>
            <a target="_blank" href="/products/{{this._id}}" class="right"><i class="far fa-eye"></i></a><br>
          </span>
        </div>
        <div class="card-content">
          <h6 class="card-title">{{this.name}}</h6>
          {{!-- <p class="card-desc">{{this.desc}}</p> --}}
          <p class="price">â‚¹ {{this.price}}</p>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
</div>