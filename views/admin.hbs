        {{!-- DELETE PRODUCT CODE --}}
        <div id="deleteProduct">
            <h1>Delete Product</h1>
            <form action="/deleteAllProduct" method="GET" onsubmit="return validate()">
                <button class="btn btn-large" type="submit"> Delete All Product</button>
            </form>
            <table class="ProductTable highlight centered responsive-table">
                {{#if result}}
                <thead>
                    <tr>
                        <th>Product ID</th>
                        <th>Product Name</th>
                        <th>Product Price</th>
                        <th>Click to Delete</th>
                    </tr>
                </thead>
                {{else}}
                <h2>No Products Found</h2>
                {{/if}}
                <tbody>
                    {{#each allProducts}}
                    <tr>
                        <td>{{this._id}}</td>
                        <td>{{this.name}}</td>
                        <td>{{this.price}}</td>
                        <td><a href="/delete/{{this._id}}" class="btn btn-large">Delete Product</a></td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>


        {{!-- ALL ORDERS CODE --}}
        <div id="allorders">
            <h1>All Orders</h1>
            <table class="ProductTable highlight centered responsive-table">
                {{#if resultOrder}}
                <thead>
                    <th>Customer name</th>
                    <th>Total Products</th>
                    <th>Total Price</th>
                    <th>Current Order Status</th>
                    <th>Update Order</th>
                </thead>
                <tbody>
                    {{#each allOrders}}
                    <form id='updateOrder' method="post" action="/updateOrderPage/{{this._id}}">
                        <tr>
                            <td>
                                {{this.userName}}
                            </td>
                            <td>
                                {{this.cart.totalQty}}
                            </td>
                            <td>
                                â‚¹{{this.cart.totalPrice}}
                            </td>

